.row
  .col-md-5.col-xs-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title= @calendar.name
      .panel-body
        = render 'form'

  .col-md-6.col-xs-12.col-md-offset-1
    .panel.panel-default
      .panel-heading
        %h3.panel-title Journées
      .panel-body
        .table-responsive
          %table.table.table-hover.table-striped
            %thead
              %tr
                %th Nom
                %th Weekend
            %tbody
              = render @calendar.days
        .btn
          Ajouter une journée