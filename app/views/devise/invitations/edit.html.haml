
= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  = f.hidden_field :invitation_token

  %h2.text-xl.font-semibold.text-gray-900 1. Complétez vos informations
  = f.input :email
  = f.input :first_name
  = f.input :last_name
  = f.input :nickname
  = f.input :phone_number


  %h2.text-xl.font-semibold.text-gray-900 2. Choisissez un mot de passe
  = f.input :password
  = f.input :password_confirmation

  %h2.text-xl.font-semibold.text-gray-900 3. Accédez à Martigua
  = f.submit 'Validez votre inscription', class: 'inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-xs hover:bg-indigo-700 focus:outline-hidden focus:ring-3 focus:ring-indigo-500 focus:ring-offset-2;'
