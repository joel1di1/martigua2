<div id="<%= dom_id discussion %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Section:</strong>
    <%= discussion.section_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= discussion.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Private:</strong>
    <%= discussion.private %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">System:</strong>
    <%= discussion.system %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this discussion", discussion, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this discussion', edit_discussion_path(discussion), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
