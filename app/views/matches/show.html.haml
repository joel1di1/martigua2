.row
  .col-md-4
    %h2
      = @match.local_team.name
      \-
      = @match.visitor_team.name
    %p
      = @match.date
    %p
      %b Score final :
      = @match.local_score
      \-
      = @match.visitor_score
    %p
      %b Location :
      = @match.location.try(:name)
    %p
      %b Meeting datetime :
      = @match.meeting_datetime
    %p
      %b Meeting location :
      = @match.meeting_location

    = link_to 'Edit', edit_section_championship_match_path(current_section, @match.championship, @match)


.row
  .col-md-4
    .panel.panel-success
      .panel-heading 
        = @match.availables.select{|user| user.sections.include? current_section}.size
        Joueurs dispos
      %ul.list-group
        - @match.availables.sort_by(&:full_name).each do |user|
          - if user.sections.include? current_section
            %li.list-group-item= user.full_name
  .col-md-4
    .panel.panel-warning
      .panel-heading 
        = @match.not_availables.select{|user| user.sections.include? current_section}.size
        Joueurs non dispos
      .list-group
        - @match.not_availables.sort_by(&:full_name).each do |user|
          - if user.sections.include? current_section
            %li.list-group-item= user.full_name
  .col-md-4
    .panel.panel-danger
      .panel-heading 
        = @match.availability_not_set.count
        Pas de r√©ponse
      .list-group
        - @match.availability_not_set.sort_by(&:full_name).each do |user|
          %li.list-group-item= user.full_name
