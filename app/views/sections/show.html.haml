.panel.panel-default
  .panel-heading
    %h3.panel-title
      Prochains matchs
      - if current_user.coach_of?(current_section)
        = link_to new_section_match_path(current_section), id: 'add-match', class: 'btn btn-xs btn-default' do
          %span.glyphicon.glyphicon-plus

  .panel-body
    - if @next_matches.empty?
      Aucun match prévu dans les prochaines semaines
    - else
      = render partial: 'matches/matches', object: @next_matches
.panel.panel-default
  .panel-heading
    %h3.panel-title Prochains entrainements
  .panel-body
    - if @next_trainings.empty?
      Aucun entrainement prévu dans les prochaines semaines
    - else
      = render partial: 'trainings/trainings', object: @next_trainings

