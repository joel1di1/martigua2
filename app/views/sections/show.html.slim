          <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
        </svg>
    </div>
</div>


.panel.panel-default
  .panel-heading
    h3.panel-title Prochains entrainements
  .panel-body
    - if @next_trainings.empty?
      Aucun entrainement prévu dans les prochaines semaines
    - else
      = render partial: 'trainings/trainings', object: @next_trainings

- if current_user.coach_of?(current_section)
  .panel.panel-default
    .panel-heading
      h3.panel-title
        Équipes
        = link_to new_section_team_path(current_section), id: 'add-team', class: 'btn btn-xs btn-default' do
          span.glyphicon.glyphicon-plus
    .panel-body
      - if @teams.empty?
        Aucune équipe enregistrée
      - else
        = render partial: 'teams/teams', object: @teams


